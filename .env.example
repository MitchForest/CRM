# CRM Phase 3 Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=mysql
DB_NAME=suitecrm
DB_USER=suitecrm
DB_PASSWORD=suitecrm_password
DB_PORT=3306

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# SuiteCRM Configuration
SITE_URL=http://localhost:8080
ADMIN_USER=admin
ADMIN_PASSWORD=admin123

# OpenAI Configuration (Required for Phase 3)
OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_ORG_ID=optional-org-id-if-you-have-one
OPENAI_MODEL_CHAT=gpt-4-turbo-preview
OPENAI_MODEL_COMPLETION=gpt-4-turbo-preview
OPENAI_MODEL_EMBEDDING=text-embedding-ada-002
OPENAI_MAX_TOKENS_CHAT=1000
OPENAI_MAX_TOKENS_COMPLETION=2000
OPENAI_TEMPERATURE=0.7

# AI Lead Scoring Configuration
AI_SCORE_WEIGHT_COMPANY_SIZE=0.20
AI_SCORE_WEIGHT_INDUSTRY_MATCH=0.15
AI_SCORE_WEIGHT_BEHAVIOR=0.25
AI_SCORE_WEIGHT_ENGAGEMENT=0.20
AI_SCORE_WEIGHT_BUDGET=0.20
AI_SCORE_THRESHOLD_HOT=80
AI_SCORE_THRESHOLD_WARM=60
AI_SCORE_THRESHOLD_COOL=40

# Activity Tracking Configuration
TRACKING_SESSION_TIMEOUT=1800
TRACKING_HIGH_VALUE_PAGES=/pricing,/demo,/contact,/trial
TRACKING_ENGAGEMENT_HIGH_PAGES=5
TRACKING_ENGAGEMENT_HIGH_TIME=300
TRACKING_ENGAGEMENT_MEDIUM_PAGES=3
TRACKING_ENGAGEMENT_MEDIUM_TIME=120

# Knowledge Base Configuration
KB_SEARCH_LIMIT=10
KB_EMBEDDING_CACHE_TTL=86400
KB_PUBLIC_ACCESS=true

# Chat Widget Configuration
CHAT_WIDGET_POSITION=bottom-right
CHAT_WIDGET_PRIMARY_COLOR=#3b82f6
CHAT_WIDGET_GREETING="Hi! How can we help you today?"
CHAT_WIDGET_OFFLINE_MESSAGE="We're currently offline. Please leave a message!"

# Form Builder Configuration
FORM_BUILDER_MAX_FIELDS=50
FORM_BUILDER_ALLOWED_DOMAINS=localhost,yourdomain.com
FORM_BUILDER_SPAM_PROTECTION=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourcrm.com
SMTP_FROM_NAME=Your CRM

# Security Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE_AFTER=3600
JWT_REFRESH_EXPIRE_AFTER=604800
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Logging Configuration
LOG_LEVEL=debug
LOG_CHANNEL=daily
LOG_MAX_FILES=30

# Feature Flags
FEATURE_AI_LEAD_SCORING=true
FEATURE_FORM_BUILDER=true
FEATURE_KNOWLEDGE_BASE=true
FEATURE_AI_CHATBOT=true
FEATURE_ACTIVITY_TRACKING=true
FEATURE_HEALTH_SCORING=true

# Development/Production Mode
APP_ENV=development
APP_DEBUG=true
DEVELOPER_MODE=true

# CORS Configuration (comma-separated domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Webhook URLs (optional)
WEBHOOK_LEAD_CREATED=
WEBHOOK_LEAD_SCORED=
WEBHOOK_FORM_SUBMITTED=
WEBHOOK_CHAT_STARTED=

# External Service URLs (if using microservices)
SERVICE_AI_URL=
SERVICE_SEARCH_URL=
SERVICE_ANALYTICS_URL=

# OAuth Client Configuration
OAUTH_CLIENT_SECRET=