{
    "name": "sassycrm/backend",
    "description": "Sassy CRM - AI-Native CRM for Software Sales",
    "type": "project",
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "illuminate/pagination": "^10.0",
        "illuminate/validation": "^10.0",
        "firebase/php-jwt": "^6.9",
        "guzzlehttp/guzzle": "^7.8",
        "openai-php/client": "^0.7",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.5",
        "ramsey/uuid": "^4.7",
        "doctrine/dbal": "^3.7",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "zircote/swagger-php": "^4.7",
        "fakerphp/faker": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
