{
    "name": "suitecrm/custom-api",
    "description": "Custom API layer for SuiteCRM with JWT authentication",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "custom/api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite 'Unit Tests'",
        "test:integration": "phpunit --testsuite 'Integration Tests'",
        "test:e2e": "phpunit --testsuite 'E2E Tests'",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}